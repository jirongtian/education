<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mappers 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" ><mapper namespace="com.ntyx.vedu.mapper.CourseMapper">    <resultMap id="BaseResultMap" type="com.ntyx.vedu.entity.Course">        <id column="course_id" property="id"/>        <result column="name" property="courseName" />    </resultMap>    <!-- &lt;!&ndash;更新&ndash;&gt;-->    <update id="update" parameterType="com.ntyx.vedu.entity.Course">        update pe_course        set name = #{courseName}        where course_id = #{id}    </update>    <!-- //查询全部-->    <select id="findAll"  resultMap="BaseResultMap">        select * from pe_course    </select>    <!--&lt;!&ndash;保存&ndash;&gt;-->    <insert id="save" parameterType="com.ntyx.vedu.entity.Course">        insert into pe_course ( name)        values (#{courseName})    </insert>    <!-- &lt;!&ndash;根据id查询&ndash;&gt;-->    <select id="findById" parameterType="integer" resultMap="BaseResultMap">        select  * from pe_course where course_id = #{id}    </select>    <!-- &lt;!&ndash;根据id删除&ndash;&gt;-->    <delete id="deleteById" parameterType="integer">        delete from pe_course where course_id = #{id}    </delete></mapper>